# Copilot Code
class Category:
    def __init__(self, name):
        self.name = name
        self.ledger = []

    def deposit(self, amount, description=''):
        self.ledger.append({'amount': amount, 'description': description})

    def withdraw(self, amount, description=''):
        if self.check_funds(amount):
            self.ledger.append({'amount': -amount, 'description': description})
            return True
        else:
            return False

    def get_balance(self):
        return sum([transaction['amount'] for transaction in self.ledger])

    def transfer(self, amount, category):
        if self.check_funds(amount):
            self.withdraw(amount, f'Transfer to {category.name}')
            category.deposit(amount, f'Transfer from {self.name}')
            return True
        else:
            return False

    def check_funds(self, amount):
        return self.get_balance() >= amount

    def __str__(self):
        title = f"{self.name:*^30}\n"
        items = ''
        for t in self.ledger:
            desc = t['description'][:23]
            amt = f"{t['amount']:7.2f}"
            items += f"{desc:23}{amt}\n"
        total = f"Total: {self.get_balance():.2f}"
        return title + items + total


def create_spend_chart(categories):
    chart = 'Percentage spent by category\n'
    total_spent = sum([-t['amount'] for c in categories for t in c.ledger if t['amount'] < 0])
    category_spent = [sum([-t['amount'] for t in c.ledger if t['amount'] < 0]) for c in categories]
    # round down to nearest 10
    percentages = [int(spent / total_spent * 100) // 10 * 10 for spent in category_spent]

    # build bar lines
    for percen in range(100, -1, -10):
        line = f"{percen:>3}| "
        for pct in percentages:
            line += 'o' + '  ' if pct >= percen else ' ' + '  '
        chart += line + '\n'

    # horizontal line
    chart += ' ' * 4 + '-' * (len(categories) * 3 + 1) + '\n'

    # category name lines
    max_length = max(len(c.name) for c in categories)
    for i in range(max_length):
        line = ' ' * 5
        for c in categories:
            ch = c.name[i] if i < len(c.name) else ' '
            line += ch + '  '
        if i < max_length - 1:
            chart += line + '\n'
        else:
            chart += line

    return chart



food = Category('Food')
food.deposit(1000, 'initial deposit')
food.withdraw(10.15, 'groceries')
food.withdraw(13, 'restaurant and more food for dessert')

clothing = Category('Clothing')
food.transfer(50, clothing)
clothing.withdraw(23, 'new T-shirt')

entertainment = Category('Entertainment')
entertainment.deposit(300, 'paycheck allocation')
entertainment.withdraw(50, 'concert tickets')
entertainment.withdraw(12.99, 'movie')

rent = Category('Rent')
rent.deposit(1200, 'monthly rent')
rent.withdraw(1200, 'rent payment')

auto = Category('Auto')
auto.deposit(500, 'savings')
auto.withdraw(150.75, 'car repair')

print(food)
print(clothing)
print(entertainment)
print(rent)
print(auto)

categories = [food, clothing, entertainment, rent, auto]

result = create_spend_chart(categories)
print(result)
